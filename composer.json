{
    "name": "rsporteman/validator",
    "type": "library",
    "description": "provides a set of commonly needed validators",
    "license": "MIT",
    "authors": [
        {
            "name": "Raoni Sporteman"
        }
    ],
    "keywords": [
        "rsporteman",
        "validator"
    ],
    "homepage": "https://github.com/rsporteman/validator",
    "autoload": {
        "psr-4": {
            "rsporteman\\Validator\\": "src/"
        }
    },
    "require": {
        "php":"^7.3 || ~8.0.0 || ~8.1.0",
        "laminas/laminas-validator": "^2.17"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2"
    },
    "minimum-stability":"dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "rsporteman\\ValidatorTest\\": "tests/src/"
        }
    },
    "scripts": {
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --color=always --coverage-clover=\".phpunit.cache/clover.xml\""
        ],
        "test:coverage-html": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --color=always --coverage-html=\".phpunit.cache/code-coverage\""
        ]
    }
}
